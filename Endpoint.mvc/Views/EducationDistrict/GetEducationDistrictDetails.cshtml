@using App.Domain.Core.DTOs

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <title>GetEducationDistrictDetails</title>
</head>
<body>
    @model List<EducationDistrictDetailsDto>
    <div class="container mt-5">
        <h2>Education Districts</h2>
        <table id="educationDistrictTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Province Name</th>
                    <th>City Name</th>
                    <th>Education District Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var district in Model)
                {
                    <tr>
                        <td>@district.ProvinceName</td>
                        <td>@district.CityName</td>
                        <td>@district.EducationDistrictName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#educationDistrictTable').DataTable();
        });
    </script>

</body>
</html>
